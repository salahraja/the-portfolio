---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
const lang = getLangFromUrl(Astro.url);
---

<a href={lang === "en" ? "/es" : "/"} class="col-span-1 flex flex-col items-center justify-center rounded-2xl aspect-square bg-[#1c053a9c] text-white w-full p-4 border-2 dark:border-[#30363D] dark:bg-[#0D1116] lg:hover:scale-[103%] transition duration-300 delay-75 ease-in-out cursor-pointer">
  <p class="font-semibold uppercase text-5xl md:text-8xl">{lang === "en" ? "EN" : "ES"}</p>
  <p class="font-bold transition duration-300 ease-in-out  flex gap-1">
    <span class={lang === "en" ? "text-[#e1a028]" : "text-white"}>EN</span>
    <span class={lang === "es" ? "text-[#e1a028]" : "text-white"}>ES</span>
  </p>
</a>

